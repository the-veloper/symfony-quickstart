{% extends '::base.html.twig' %}
{% block title %}Admin | Users{% endblock %}


{% block body %}
<div class="count">
    {{ pagination.getTotalItemCount }}
</div>


<div class="items">
    {% for user in pagination %}

        <div class="item-{{ user.id }}">
            <div class="row item-list {% if loop.index is odd %}odd-item{% endif %}">
                <p class="description">{{ user.username }}</p>
                <p class="money">{{ user.money }}</p>
                <p class="role">{% for role in user.roles %}
                        {{ role }}
                    {% endfor %}
                </p>
                <button class="js-processed-actions" type="button" data-path="{{ path('user_ban_username') }}" data-id="{{ user.id }}">Ban {{ user.username }}</button>
                <button class="js-processed-actions" type="button" data-id="{{ user.id }}">Promote to"</button>
                <button class="js-processed-actions" type="button" data-path="{{ path('user_ban_ip') }}" data-id="{{ user.id }}">Ban {{ user.username }} by IP</button>
                <button class="js-processed-actions" type="button" data-path="{{ path('user_delete') }}" data-id="{{ user.id }}">Delete Account</button>
            </div>
        </div>
    {% endfor %}
</div>

{# display navigation #}
<div class="navigation">
    {{ knp_pagination_render(pagination) }}
</div>
{% endblock %}
